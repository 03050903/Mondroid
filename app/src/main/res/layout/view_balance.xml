<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_balance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/title_balance"
        android:textColor="@color/white_trans_80"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/text_balance_title"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/text_spent_today_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="@string/title_spent_today"
        android:textColor="@color/white_trans_80"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_spent_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/text_spent_today_title"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        android:textSize="38sp" />

</merge>